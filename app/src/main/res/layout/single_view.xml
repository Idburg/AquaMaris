<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@id/imagen"
        app:layout_constraintEnd_toEndOf="@id/imagen"
        app:layout_constraintStart_toStartOf="@id/imagen"
        app:layout_constraintTop_toTopOf="@id/imagen"
        android:id="@+id/constr">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginRight="20dp"

                android:layout_marginTop="5dp"
                android:id="@+id/imagen" />
        </LinearLayout>


        <Button
            android:id="@+id/texto"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:alpha="0.1"
            android:backgroundTint="@color/white"
            app:cornerRadius="0sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="@id/constr"
            app:layout_constraintEnd_toEndOf="@id/constr"
            app:layout_constraintStart_toStartOf="@id/constr"
            app:layout_constraintTop_toTopOf="@id/constr"
            tools:ignore="NotSibling" />

    <Button
        android:id="@+id/botonProvincias"
        android:layout_width="160dp"
        android:layout_height="40dp"
        app:cornerRadius="0sp"
        app:layout_constraintStart_toStartOf="@id/imagen"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/imagen"
        app:layout_constraintEnd_toEndOf="@id/imagen"
        android:layout_marginTop="20dp"
        tools:ignore="NotSibling" />

    </androidx.constraintlayout.widget.ConstraintLayout>

